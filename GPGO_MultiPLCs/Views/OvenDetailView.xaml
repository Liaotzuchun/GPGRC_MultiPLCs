                                            <Setter TargetName="Border" Property="Background" Value="Magenta" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DataContext.(models:LogEvent.Type), RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRowHeader}}}"
