                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{Binding PV_TemperatureSetpoint_5, Mode=OneWay, StringFormat=\{0:F1\} °C}" />
                    </Border>
                    <Border Grid.Row="7"
                            Grid.Column="1"
                            BorderThickness="0,0,1,0"
                            IsEnabled="{Binding IsEnabled, ElementName=Border6, Mode=OneWay}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{Binding PV_TemperatureSetpoint_6, Mode=OneWay, StringFormat=\{0:F1\} °C}" />
                    </Border>
                    <Border Grid.Row="2"
                            Grid.Column="2"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{Binding PV_RampTime_1, Mode=OneWay, StringFormat=\{0:F0\}}" />
                            <Run Text="{DynamicResource 分}" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="3"
                            Grid.Column="2"
                            BorderThickness="0,0,1,1"
                            IsEnabled="{Binding IsEnabled, ElementName=Border2, Mode=OneWay}"
