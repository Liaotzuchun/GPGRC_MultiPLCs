            </GroupBox>
            <GroupBox Grid.Column="1"
                      Margin="2,4,0,4">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="4,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource GlyphBrush}"
                                   Text="{DynamicResource 設備狀態}" />
                        <Border Height="20"
                                Background="{StaticResource DisabledBackgroundBrush}"
                                CornerRadius="10">
                            <views:UniformStackPanel Orientation="Horizontal">
                                <Border Width="16"
                                        Height="16"
                                        Margin="2,0"
                                        VerticalAlignment="Center"
                                        Background="{StaticResource OKBrush}"
                                        CornerRadius="8">
                                    <Border Background="#99000000"
                                            CornerRadius="8"
                                            Visibility="{Binding GreenLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                                </Border>
                                <Border Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Background="Gold"
                                        CornerRadius="8">
                                    <Border Background="#99000000"
                                            CornerRadius="8"
                                            Visibility="{Binding YellowLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                                </Border>
                                <Border Width="16"
                                        Height="16"
                                        Margin="2,0"
                                        VerticalAlignment="Center"
                                        Background="{StaticResource ErrorBrush}"
                                        CornerRadius="8">
                                    <Border Background="#99000000"
                                            CornerRadius="8"
                                            Visibility="{Binding RedLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                                </Border>
                            </views:UniformStackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox.Header>
                <Grid Background="{StaticResource LightBrush}"
                      ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="Auto"
                                          MinWidth="100" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0"
                               Background="Transparent"
                               LastChildFill="True">
                        <Border BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                BorderThickness="0,1,0,0"
                                DockPanel.Dock="Top">
                            <views:LevelsProgressBar MaxWidth="200"
                                                     Margin="0,0,0,-18"
                                                     Maximum="260"
                                                     Minimum="0"
                                                     Unit="°C"
                                                     Value="{Binding PV_ThermostatTemperature, Mode=OneWay}">
                                <views:LevelsProgressBar.Steps>
