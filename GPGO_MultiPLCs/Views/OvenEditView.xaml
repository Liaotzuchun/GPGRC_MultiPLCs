<UserControl x:Class="GPGO_MultiPLCs.Views.OvenEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gpmodels="clr-namespace:GPMVVM.Models;assembly=GPMVVM"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:GPGO_MultiPLCs.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:GPGO_MultiPLCs.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:views="clr-namespace:GPMVVM.Views;assembly=GPMVVM"
             xmlns:vm="clr-namespace:GPGO_MultiPLCs.ViewModels"
             d:DataContext="{d:DesignInstance vm:PLC_ViewModel}"
             d:DesignHeight="800"
             d:DesignWidth="900"
             IsEnabled="{Binding IsExecuting, Mode=OneWay, Converter={StaticResource BoolNot}}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:EqualBrush x:Key="EqualBrush" />
        <Style x:Key="ValueBorder"
               TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource WindowBackgroundBrush4}" />
            <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush6}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="TextElement.Foreground" Value="{StaticResource BaseForeground}" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="BorderBrush" Value="{StaticResource DisabledBorderBrush}" />
                    <Setter Property="Background" Value="{StaticResource DisabledBackgroundBrush}" />
                    <Setter Property="TextElement.Foreground" Value="{StaticResource DisabledForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid TextElement.FontWeight="Bold">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <views:UniformStackPanel Orientation="Vertical">
                <Border Height="24"
                        Background="{StaticResource OKBrush}">
                    <Border Background="#99000000"
                            Visibility="{Binding GreenLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
                <Border Height="24"
                        Background="Gold">
                    <Border Background="#99000000"
                            Visibility="{Binding YellowLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
                <Border Height="24"
                        Background="{StaticResource ErrorBrush}">
                    <Border Background="#99000000"
                            Visibility="{Binding RedLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
            </views:UniformStackPanel>
            <Border x:Name="StatusBorder"
                    Grid.Row="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Offset="0" Color="{Binding Color, Source={StaticResource WindowBackgroundBrush6}}" />
                        <GradientStop Offset="1" Color="{Binding Color, Source={StaticResource WindowBackgroundBrush2}}" />
                    </LinearGradientBrush>
                </Border.Background>
                <Viewbox Margin="6"
                         VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource BaseForeground}"
                               Text="{Binding ThermostatTemperature, Mode=OneWay, StringFormat=\{0:F1\}°C}" />
                </Viewbox>
            </Border>
            <Border Grid.Row="1"
                    Background="{StaticResource WorkingBrush}"
                    Visibility="{Binding IsExecuting, Mode=OneWay, Converter={StaticResource BoolVis}}">
                <Viewbox Margin="6"
                         VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource ErrorBrush}"
                               Text="{Binding ThermostatTemperature, Mode=OneWay, StringFormat=\{0:F1\}°C}" />
                </Viewbox>
            </Border>
            <Border Grid.Row="0"
                    Grid.RowSpan="2"
                    Background="{StaticResource DisabledBackgroundBrush}"
                    Visibility="{Binding ConnectionStatus.CurrentValue, Mode=OneWay, Converter={StaticResource BoolNotVis}}">
                <Viewbox Margin="6"
                         VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource DisabledForegroundBrush}"
                               Text="{DynamicResource 離線}" />
                </Viewbox>
            </Border>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Margin="0,0,2,2"
                      FontSize="16"
                      FontWeight="Bold"
                      Header="{DynamicResource 投產}"
                      IsEnabled="{Binding User.Level, Source={StaticResource Mediator}, Converter={StaticResource IsMoreThanValue}, ConverterParameter=1, Mode=OneWay}">
                <Grid TextElement.FontSize="20"
                      TextElement.FontWeight="Bold">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,1,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 配方}" />
                    </Border>
                    <ComboBox Grid.Row="0"
                              Grid.Column="1"
                              BorderThickness="1,1,1,1"
                              FontSize="16"
                              GotKeyboardFocus="CB_GotKeyboardFocus"
                              IsEditable="{Binding IsEnabled, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                              IsHitTestVisible="{Binding IsEnabled, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                              IsTextSearchEnabled="False"
                              ItemsSource="{Binding Recipe_Names, Mode=OneWay}"
                              LostKeyboardFocus="CB_LostKeyboardFocus"
                              SelectedItem="{Binding Selected_Name, Mode=TwoWay}"
                              Text="{Binding Intput_Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <!--  因為在combobox的選單出現時，enter會優先處裡選單，keydown事件會無法偵測enter，因此必須在keyup的時候才檢查enter  -->
                            <i:EventTrigger EventName="KeyUp">
                                <gpmodels:InteractiveCommand Command="{Binding CheckRecipeCommand_KeyIn, Mode=OneTime}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Mode=OneWay}"
                                           TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 操作員}" />
                    </Border>
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             BorderThickness="1,0,1,1"
                             GotKeyboardFocus="TextBox_GotKeyboardFocus"
                             Text="{Binding InputOperatorID, Mode=TwoWay}" />
                    <Border Grid.Row="2"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 料號}" />
                    </Border>
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             BorderThickness="1,0,1,1"
                             GotKeyboardFocus="TextBox_GotKeyboardFocus"
                             Text="{Binding InputPartID, Mode=TwoWay}" />
                    <Border Grid.Row="3"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 批號}" />
                    </Border>
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             BorderThickness="1,0,1,1"
                             GotKeyboardFocus="TextBox_GotKeyboardFocus"
                             Text="{Binding InputLotID, Mode=TwoWay}" />
                    <Border Grid.Row="4"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 數量}" />
                    </Border>
                    <Border Grid.Row="4"
                            Grid.Column="1"
                            BorderThickness="1,0,1,1">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource LightBrush}" />
                                <Setter Property="BorderBrush" Value="{StaticResource WindowBackgroundBrush4}" />
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="{DynamicResource DisabledBackgroundBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource DisabledBorderBrush}" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=NumericTextBox, Mode=OneWay}"
                                                 Value="True">
                                        <Setter Property="Background" Value="{DynamicResource LightColorBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <views:SpinControl Margin="8,0"
                                           VerticalAlignment="Center"
                                           Maximum="{Binding InputQuantityMax, Mode=OneTime}"
                                           Minimum="{Binding InputQuantityMin, Mode=OneTime}"
                                           Value="{Binding InputQuantity, Mode=TwoWay}">
                            <views:SpinControl.SmallChange>
                                <system:Double>1</system:Double>
                            </views:SpinControl.SmallChange>
                            <views:NumericTextBox x:Name="NumericTextBox"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  IntOnly="True"
                                                  Max="{Binding InputQuantityMax, Mode=OneTime}"
                                                  Min="{Binding InputQuantityMin, Mode=OneTime}"
                                                  Text="{Binding InputQuantity, Mode=TwoWay}" />
                        </views:SpinControl>
                    </Border>
                    <Button Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="{DynamicResource 新增}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddLotCommand, Mode=OneTime}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="0"
                      Grid.Column="1"
                      Margin="2,0,0,2">
                <GroupBox.Header>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource GlyphBrush}">
                        <Run Text="{DynamicResource 總數量}" />
                        <Run Text=":" />
                        <Run Text="{Binding Quantity, Mode=OneWay}" />
                    </TextBlock>
                </GroupBox.Header>
                <DataGrid x:Name="DataGrid"
                          views:DataGridExtensions.DisplayRowNumber="True"
                          AutoGenerateColumns="False"
                          BorderThickness="1,1,1,1"
                          DockPanel.Dock="Top"
                          FontSize="14"
                          FontWeight="Bold"
                          HorizontalScrollBarVisibility="Disabled"
                          ItemsSource="{Binding Ext_Info, Mode=OneWay}"
                          VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="Auto"
                                                MinWidth="60"
                                                CellStyle="{StaticResource DataGridCellStyle2}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="models:ProductInfo">
                                    <Button Content="{DynamicResource 刪除}"
                                            Style="{StaticResource TextButton2}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding DataContext.DeleteLotCommand, ElementName=DataGrid, Mode=OneTime}"
                                                                       CommandParameter="{Binding SelectedItem, ElementName=DataGrid, Mode=OneWay}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource 料號}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="models:ProductInfo">
                                    <Viewbox Margin="4"
                                             StretchDirection="DownOnly">
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding PartID, Mode=OneWay}"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Viewbox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource 批號}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="models:ProductInfo">
                                    <Viewbox Margin="4"
                                             StretchDirection="DownOnly">
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding LotID, Mode=OneWay}"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Viewbox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto"
                                                MinWidth="50">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource 數量}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="models:ProductInfo">
                                    <Grid>
                                        <ToggleButton x:Name="ToggleButton"
                                                      Content="{Binding PanelIDs.Count, Mode=OneWay}"
                                                      Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridCell}}}"
                                                      Style="{StaticResource ArrowToggle}">
                                            <ToggleButton.IsChecked>
                                                <Binding Converter="{StaticResource ConstValue}"
                                                         Mode="OneWay"
                                                         Path="IsSelected"
                                                         RelativeSource="{RelativeSource FindAncestor,
                                                                                         AncestorType={x:Type DataGridCell}}">
                                                    <Binding.ConverterParameter>
                                                        <system:Boolean>False</system:Boolean>
                                                    </Binding.ConverterParameter>
                                                </Binding>
                                            </ToggleButton.IsChecked>
                                        </ToggleButton>
                                        <Popup AllowsTransparency="True"
                                               Focusable="False"
                                               IsHitTestVisible="False"
                                               IsOpen="{Binding IsChecked, ElementName=ToggleButton, Mode=OneWay}"
                                               Placement="Center"
                                               PopupAnimation="Fade">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseLeave">
                                                    <views:SetPropertyAction PropertyName="IsChecked"
                                                                             TargetObject="{Binding ElementName=ToggleButton, Mode=OneTime}">
                                                        <views:SetPropertyAction.PropertyValue>
                                                            <system:Boolean>False</system:Boolean>
                                                        </views:SetPropertyAction.PropertyValue>
                                                    </views:SetPropertyAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <ItemsControl x:Name="ItemsControl"
                                                          AlternationCount="2147483647"
                                                          ItemsSource="{Binding PanelIDs, Mode=OneWay}">
                                                <ItemsControl.Template>
                                                    <ControlTemplate>
                                                        <Border Background="Transparent">
                                                            <Border Margin="15,10,15,15"
                                                                    Background="{StaticResource LightColorBrush}"
                                                                    BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                                                    BorderThickness="1,1,0,0">
                                                                <Border.Effect>
                                                                    <DropShadowEffect BlurRadius="15"
                                                                                      Direction="270"
                                                                                      Opacity="0.25" />
                                                                </Border.Effect>
                                                                <ItemsPresenter />
                                                            </Border>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ItemsControl.Template>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <views:UniformGridWithOrientation Orientation="Vertical"
                                                                                          Rows="10" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid TextElement.Foreground="{StaticResource BaseForeground}">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="30" />
                                                                <ColumnDefinition />
                                                            </Grid.ColumnDefinitions>
                                                            <Border Background="{StaticResource WindowBackgroundBrush6}"
                                                                    BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                                                    BorderThickness="0,0,1,1">
                                                                <TextBlock Margin="4"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="12"
                                                                           Text="{Binding (ItemsControl.AlternationIndex), ConverterParameter=1, Converter={StaticResource AddValue}, RelativeSource={RelativeSource TemplatedParent}, Mode=OneTime}" />
                                                            </Border>
                                                            <Border Grid.Column="1"
                                                                    Background="Transparent"
                                                                    BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                                                    BorderThickness="0,0,1,1">
                                                                <TextBlock Margin="4"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="12"
                                                                           Text="{Binding Mode=OneWay}" />
                                                            </Border>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <Popup.VerticalOffset>
                                                <MultiBinding Converter="{StaticResource SumValues}">
                                                    <Binding Converter="{StaticResource RatioValue}"
                                                             ConverterParameter="0.5"
                                                             ElementName="ItemsControl"
                                                             Path="ActualHeight" />
                                                    <Binding Converter="{StaticResource RatioValue}"
                                                             ConverterParameter="0.5"
                                                             ElementName="ToggleButton"
                                                             Path="ActualHeight" />
                                                </MultiBinding>
                                            </Popup.VerticalOffset>
                                        </Popup>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Margin="0,2,0,0"
                      FontSize="16"
                      FontWeight="Bold">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="{StaticResource GlyphBrush}"
                                   Text="{DynamicResource 配方參數}" />
                        <Border Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Background="{StaticResource WindowBackgroundBrush6}">
                            <TextBlock Margin="4,0"
                                       FontSize="12">
                                <TextBlock.Foreground>
                                    <MultiBinding Converter="{StaticResource EqualBrush}">
                                        <Binding Mode="OneWay"
                                                 Path="RecipeName" />
                                        <Binding Mode="OneWay"
                                                 Path="PV_RecipeName" />
                                    </MultiBinding>
                                </TextBlock.Foreground>
                                <Run Text="SV:" />
                                <Run Text="{Binding RecipeName, Mode=OneWay}" />
                            </TextBlock>
                        </Border>
                        <Border VerticalAlignment="Center"
                                Background="{StaticResource WindowBackgroundBrush6}"
                                BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                BorderThickness="1,0,0,0">
                            <TextBlock Margin="4,0"
                                       FontSize="12"
                                       Foreground="{StaticResource BaseForeground}">
                                <Run Text="PV:" />
                                <Run Text="{Binding PV_RecipeName, Mode=OneWay}" />
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </GroupBox.Header>
                <Grid Background="{StaticResource WindowBackgroundBrush6}"
                      ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 使用段數}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="1"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding StepCounts, Mode=OneWay}"
                                                 Value2="{Binding PV_StepCounts, Mode=OneWay}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="2"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 降溫溫度}" />
                            <Run Text="(°C)" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="3"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding CoolingTemperature, Mode=OneWay, StringFormat=\{0:F1\}}"
                                                 Value2="{Binding PV_CoolingTemperature, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="4"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 降溫時間}" />
                            <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="5"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding CoolingTime, Mode=OneWay, StringFormat=\{0:F0\}}"
                                                 Value2="{Binding PV_CoolingTime, Mode=OneWay, StringFormat=\{0:F0\}}" />
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="1,0,1,1"
                            Style="{StaticResource ValueBorder}" />
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 目標溫度}" />
                            <Run Text="(°C)" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="2"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 升溫時間}" />
                            <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="3"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 升溫警報}" />
                            <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="4"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 恆溫時間}" />
                            <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="5"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 恆溫警報}" />
                            <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="2"
                            Grid.Column="0"
                            BorderThickness="1,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="1" />
                    </Border>
                    <Border x:Name="Border2"
                            Grid.Row="3"
                            Grid.Column="0"
                            BorderThickness="1,0,1,1"
                            IsEnabled="{Binding StepCounts, Mode=OneWay, Converter={StaticResource IsMoreThanValue}, ConverterParameter=2}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="2" />
                    </Border>
                    <Border x:Name="Border3"
                            Grid.Row="4"
