<UserControl x:Class="GPGO_MultiPLCs.Views.OvenEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:GPGO_MultiPLCs.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:GPGO_MultiPLCs.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:views="clr-namespace:GPMVVM.Views;assembly=GPMVVM"
             xmlns:vm="clr-namespace:GPGO_MultiPLCs.ViewModels"
             d:DataContext="{d:DesignInstance vm:PLC_ViewModel}"
             d:DesignHeight="800"
             d:DesignWidth="900"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:EqualBrush x:Key="EqualBrush" />
    </UserControl.Resources>
    <Grid>
        <!--上-->
        <Grid Grid.Row="0"
              Grid.Column="1"
              Margin="0,0,5,5"
              IsEnabledChanged="Grid_IsEnabledChanged"
              TextElement.FontWeight="Bold"
              Visibility="{Binding EditTopVisibility, Source={StaticResource Mediator},Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="1.2*" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <GroupBox Header="MES"
                          IsEnabled="{Binding IsHeartbeat , Source={StaticResource Mediator},Mode=OneWay}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="AddAgv"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    IsEnabled="{Binding TopAddEnabled}">
                                <TextBlock>叫料</TextBlock>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding TopAddAGV, Mode=OneTime}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <Button Grid.Row="0"
                                    Grid.Column="1"
                                    IsEnabled="{Binding TopRetEnabled}">
                                <TextBlock>退料</TextBlock>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding TopRetAGV, Mode=OneTime}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <Button Grid.Row="0"
                                    Grid.Column="2"
                                    IsEnabled="{Binding TopOutEnabled}">
                                <TextBlock Text="出料">
                                </TextBlock>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding TopOutAGV, Mode=OneTime}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <Button Grid.Row="0"
                                    Grid.Column="3"
                                    IsEnabled="{Binding TopNGOutEnabled}">
                                <TextBlock>NG出料
                                </TextBlock>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding TopNGOutAGV, Mode=OneTime}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <Button Grid.Row="0"
                                    Grid.Column="4"
                                    IsEnabled="{Binding TopCheckButtonEnabled}">
                                <TextBlock  Text="{DynamicResource 加工完成}"></TextBlock>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding TopCheckButton, Mode=OneTime}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </Grid>
                        <Grid Grid.Row="1"
                              Grid.ColumnSpan="2">
                            <Grid Grid.Row="1"
                                  Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="0.5*" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0"
                                        Background="{StaticResource WindowBackgroundBrush2}"
                                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                        BorderThickness="1,1,0,1">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Text="{DynamicResource 掃碼}" />
                                </Border>
                                <TextBox Grid.Column="1"
                                         BorderThickness="1,0,1,1"
                                         FontSize="22"
                                         IsEnabled="{Binding TopBarcodeEnabled , Mode=TwoWay}"
                                         Text="{Binding TopBarcode , Mode=TwoWay}" />
                                <Button Grid.Column="2"
                                        IsEnabled="{Binding TopIngredientsButtonEnabled}">
                                    <TextBlock Text="{DynamicResource 確認}"></TextBlock>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding TopIngredients, Mode=OneTime}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button Grid.Column="3"
                                        IsEnabled="{Binding TopIngredientsButtonEnabled}">
                                    <TextBlock Text="{DynamicResource 清除}"></TextBlock>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding TopCleanWO, Mode=OneTime}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </Grid>
                        </Grid>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="4"
                          Grid.RowSpan="2"
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="0,0,0,2">
                    <GroupBox.Header>
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource GlyphBrush}">
                                    <Run Text="{DynamicResource 配方訊息}" />
                        </TextBlock>
                    </GroupBox.Header>

                    <Grid Background="#cbdac4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Background="SlateGray">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock  Grid.Row="0"
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Foreground="black"
                                        Text="{DynamicResource 配方項}" />
                            <TextBlock  Grid.Row="0"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Foreground="black"
                                        Text="{DynamicResource 配方值}" />
                        </Grid>
                        <Border Grid.Row="1"
                                Grid.Column="0"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                        <TextBlock  
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="black"
                                    Text="{DynamicResource 工單ID}" />
                        </Border>
                        <Border Grid.Row="1"
                                Grid.Column="1"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="black"
                                       Text="{Binding TopWorkOrder , Mode=OneWay}" />
                        </Border>
                        <Border Grid.Row="2"
                                Grid.Column="0"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="black"
                                        Text="{DynamicResource  物资编码}" />
                        </Border>
                        <Border Grid.Row="2"
                                Grid.Column="1"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="black"
                                       Text="{Binding TopPartID , Mode=OneWay}" />
                        </Border>
                        <Border Grid.Row="3"
                                Grid.Column="0"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="black"
                                       Text="{DynamicResource  工序代碼}" />
                        </Border>
                        <Border Grid.Row="3"
                                Grid.Column="1"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock  Grid.Row="3"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="black"
                                        Text="{Binding TopProcessID , Mode=OneWay}" />
                        </Border>
                        <Border Grid.Row="4"
                                Grid.Column="0"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock  HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="black"
                                        Text="{DynamicResource  計畫加工板數}" />
                        </Border>
                        <Border Grid.Row="4"
                                Grid.Column="1"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock  HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="black"
                                        Text="{Binding TopPanelCount , Mode=OneWay}" />
                        </Border>
                        <Border Grid.Row="5"
                                Grid.Column="0"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock  Grid.Row="5"
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="black"
                                        Text="{DynamicResource  配方名稱}" />
                        </Border>
                        <Border Grid.Row="5"
                                Grid.Column="1"
                                Background="{StaticResource WindowBackgroundBrush2}"
                                Style="{StaticResource ValueBorder}">
                            <TextBlock  Grid.Row="5"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="black"
                                        Text="{Binding TopRecipeID , Mode=OneWay}" />
                        </Border>
                        <TextBlock  Grid.Row="6"
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="black"
                                    Visibility="Hidden"
                                    Text="Check in" />
                        <TextBlock  Grid.Row="6"
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="black"
                                    Visibility="Hidden"
                                    Text="{Binding TopCheckin , Mode=OneWay}" />
                    </Grid>
                </GroupBox>
            </Grid>
            <GroupBox Grid.Row="0"
                      Grid.Column="1"
                      Margin="4,0,0,3">
                <GroupBox.Header>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource GlyphBrush}">
                                    <Run Text="MES消息" />
                    </TextBlock>
                </GroupBox.Header>
                <Grid Background="#cbdac4">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock  Grid.Row="0"
                                    Grid.Column="0"
                                    FontSize="20"
                                    Foreground="black"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                                    <Run  Text="{Binding TopMESMessage, Mode=OneWay}" />
                        </TextBlock>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1"
                      Grid.Column="0"
                      Margin="0,2,0,0"
                      FontSize="12"
                      FontWeight="Bold">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="{StaticResource GlyphBrush}"
                                   Text="{DynamicResource 配方參數}" />
                        <Border Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Background="{StaticResource WindowBackgroundBrush6}">
                            <TextBlock Margin="4,0"
                                       FontSize="12">
                                <TextBlock.Foreground>
                                    <MultiBinding Converter="{StaticResource EqualBrush}">
                                        <Binding Mode="OneWay"
                                                 Path="RecipeName" />                                        
                                    </MultiBinding>
                                </TextBlock.Foreground>
                            <Run Text="配方名稱:" />
                            <Run Text="{Binding RecipeName, Mode=OneWay}" />
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </GroupBox.Header>
                <Grid Background="{StaticResource WindowBackgroundBrush6}"
                      ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 氮氣模式}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="1"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding NitrogenMode, Mode=OneWay, Converter={StaticResource BoolOnOff}}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="2"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 充氣逾時}" />
                        <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="3"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding InflatingTime, Mode=OneWay, StringFormat=\{0:F0\}}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="4"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 含氧量}" />
                        <Run Text="(%)" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="5"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding OxygenContentSet, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="1,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 使用段數}" />
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding SegmentCounts, Mode=OneWay}" />
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="2"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 降溫溫度}" />
                        <Run Text="(°C)" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="3"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding CoolingTemperature, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="4"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 降溫時間}" />
                        <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="5"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding CoolingTime, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="6"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}" />
                    <Border Grid.Row="2"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="1,0,1,1"
                            Style="{StaticResource ValueBorder}" />
                    <Border Grid.Row="2"
                            Grid.Column="1"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 目標溫度}" />
                        <Run Text="(°C)" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="2"
                            Grid.Column="2"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 升溫時間}" />
                        <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="2"
                            Grid.Column="3"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 升溫警報}" />
                        <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="2"
                            Grid.Column="4"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 恆溫時間}" />
                        <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="2"
                            Grid.Column="5"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 恆溫警報}" />
                        <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="2"
                            Grid.Column="6"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        <Run Text="{DynamicResource 恆溫補償時間}" />
                        <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="3"
                            Grid.Column="0"
                            BorderThickness="1,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="1" />
                    </Border>
                    <Border x:Name="Border2"
                            Grid.Row="4"
                            Grid.Column="0"
                            BorderThickness="1,0,1,1"
                            IsEnabled="{Binding SegmentCounts, Mode=OneWay, Converter={StaticResource IsMoreThanValue}, ConverterParameter=2}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="2" />
                    </Border>
                    <Border x:Name="Border3"
                            Grid.Row="5"
                            Grid.Column="0"
                            BorderThickness="1,0,1,1"
                            IsEnabled="{Binding SegmentCounts, Mode=OneWay, Converter={StaticResource IsMoreThanValue}, ConverterParameter=3}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="3" />
                    </Border>
                    <Border x:Name="Border4"
                            Grid.Row="6"
                            Grid.Column="0"
                            BorderThickness="1,0,1,1"
                            IsEnabled="{Binding SegmentCounts, Mode=OneWay, Converter={StaticResource IsMoreThanValue}, ConverterParameter=4}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="4" />
                    </Border>
                    <Border x:Name="Border5"
                            Grid.Row="7"
                            Grid.Column="0"
                            BorderThickness="1,0,1,1"
                            IsEnabled="{Binding SegmentCounts, Mode=OneWay, Converter={StaticResource IsMoreThanValue}, ConverterParameter=5}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="5" />
                    </Border>
                    <Border x:Name="Border6"
                            Grid.Row="8"
                            Grid.Column="0"
                            BorderThickness="1,0,1,1"
                            IsEnabled="{Binding SegmentCounts, Mode=OneWay, Converter={StaticResource IsMoreThanValue}, ConverterParameter=6}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="6" />
                    </Border>
                    <Border Grid.Row="3"
                            Grid.Column="1"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding TemperatureSetpoint_1, Mode=OneWay, StringFormat=\{0:F1\}}"/>
                    </Border>
                    <Border Grid.Row="4"
                            Grid.Column="1"
                            BorderThickness="0,0,1,1"
                            IsEnabled="{Binding IsEnabled, ElementName=Border2, Mode=OneWay}"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding TemperatureSetpoint_2, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="5"
                            Grid.Column="1"
                            BorderThickness="0,0,1,1"
                            IsEnabled="{Binding IsEnabled, ElementName=Border3, Mode=OneWay}"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding TemperatureSetpoint_3, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="6"
                            Grid.Column="1"
                            BorderThickness="0,0,1,1"
                            IsEnabled="{Binding IsEnabled, ElementName=Border4, Mode=OneWay}"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding TemperatureSetpoint_4, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="7"
                            Grid.Column="1"
                            BorderThickness="0,0,1,1"
                            IsEnabled="{Binding IsEnabled, ElementName=Border5, Mode=OneWay}"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding TemperatureSetpoint_5, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="8"
                            Grid.Column="1"
                            BorderThickness="0,0,1,1"
                            IsEnabled="{Binding IsEnabled, ElementName=Border6, Mode=OneWay}"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding TemperatureSetpoint_6, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="3"
                            Grid.Column="2"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
