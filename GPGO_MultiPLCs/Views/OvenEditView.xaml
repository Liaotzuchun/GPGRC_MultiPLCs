<UserControl x:Class="GPGO_MultiPLCs.Views.OvenEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:GPGO_MultiPLCs.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:GPGO_MultiPLCs.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:views="clr-namespace:GPMVVM.Views;assembly=GPMVVM"
             xmlns:vm="clr-namespace:GPGO_MultiPLCs.ViewModels"
             d:DataContext="{d:DesignInstance vm:PLC_ViewModel}"
             d:DesignHeight="800"
             d:DesignWidth="900"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:EqualBrush x:Key="EqualBrush" />
    </UserControl.Resources>

    <Grid TextElement.FontWeight="Bold">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <views:UniformStackPanel Orientation="Vertical">
                <Border Height="24"
                        Background="{StaticResource BlueA700Brush}">
                    <Border Background="#99000000"
                            Visibility="{Binding BlueLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
                <Border Height="24"
                        Background="{StaticResource OKBrush}">
                    <Border Background="#99000000"
                            Visibility="{Binding GreenLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
                <Border Height="24"
                        Background="Gold">
                    <Border Background="#99000000"
                            Visibility="{Binding YellowLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
                <Border Height="24"
                        Background="{StaticResource ErrorBrush}">
                    <Border Background="#99000000"
                            Visibility="{Binding RedLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
            </views:UniformStackPanel>
            <Border x:Name="StatusBorder"
                    Grid.Row="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Offset="0" Color="{Binding Color, Source={StaticResource WindowBackgroundBrush6}}" />
                        <GradientStop Offset="1" Color="{Binding Color, Source={StaticResource WindowBackgroundBrush2}}" />
                    </LinearGradientBrush>
                </Border.Background>
                <Viewbox Margin="6"
                         VerticalAlignment="Center"
                         StretchDirection="DownOnly">
                    <TextBlock FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource BaseForeground}"
                               Text="{Binding PV_ThermostatTemperature, Mode=OneWay, StringFormat=\{0:F1\}°C}" />
                </Viewbox>
            </Border>
            <Border Grid.Row="1"
                    Background="{StaticResource WorkingBrush}"
                    Visibility="{Binding IsExecuting, Mode=OneWay, Converter={StaticResource BoolVis}}">
                <Viewbox Margin="6"
                         VerticalAlignment="Center"
                         StretchDirection="DownOnly">
                    <TextBlock FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"
                               Text="{Binding PV_ThermostatTemperature, Mode=OneWay, StringFormat=\{0:F1\}°C}" />
                </Viewbox>
            </Border>
            <Border Grid.Row="0"
                    Grid.RowSpan="2"
                    Background="{StaticResource DisabledBackgroundBrush}"
                    Visibility="{Binding RemoteMode, Mode=OneWay, Converter={StaticResource BoolNotVis}}">
                <Viewbox Margin="6"
                         VerticalAlignment="Center"
                         StretchDirection="DownOnly">
                    <StackPanel Orientation="Vertical"
                                TextElement.FontWeight="Bold"
                                TextElement.Foreground="{StaticResource ErrorBrush}">
                        <TextBlock HorizontalAlignment="Center"
                                   FontSize="20"
                                   Text="PC" />
                        <ItemsControl HorizontalAlignment="Center"
                                      FontSize="24"
                                      ItemsSource="{DynamicResource 模式}" />
                        <ItemsControl HorizontalAlignment="Center"
                                      FontSize="24"
                                      ItemsSource="{DynamicResource 停用}" />
                    </StackPanel>
                </Viewbox>
            </Border>
            <Border Grid.Row="0"
                    Grid.RowSpan="2"
                    Background="{StaticResource DisabledBackgroundBrush}"
                    Visibility="{Binding ConnectionStatus.CurrentValue, Mode=OneWay, Converter={StaticResource BoolNotVis}}">
                <Viewbox Margin="6"
                         VerticalAlignment="Center"
                         StretchDirection="DownOnly">
                    <ItemsControl FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource DisabledForegroundBrush}"
                                  ItemsSource="{DynamicResource 離線}" />
                </Viewbox>
            </Border>
            <Button Grid.Row="2">
                <Viewbox Margin="6"
                         VerticalAlignment="Center"
                         StretchDirection="DownOnly">
                    <ItemsControl FontSize="24"
                                  FontWeight="Bold"
                                  ItemsSource="{DynamicResource 設備狀態}" />
                </Viewbox>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding GoDetailCommand, Mode=OneTime}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </Grid>
        <Grid Grid.Column="2"
              IsEnabled="{Binding IsExecuting, Mode=OneWay, Converter={StaticResource BoolNot}}"
              IsEnabledChanged="Grid_IsEnabledChanged">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="1.2*" />
            </Grid.RowDefinitions>
            <GroupBox Margin="0,0,2,2"
                      FontSize="16"
                      FontWeight="Bold"
                      Header="{DynamicResource 投產}">
                <GroupBox.IsEnabled>
                    <MultiBinding Converter="{StaticResource MultiAllTrue}">
                        <Binding Mode="OneWay"
                                 Path="RemoteMode" />
                        <Binding Converter="{StaticResource IsMoreThanValue}"
                                 ConverterParameter="1"
                                 FallbackValue="False"
                                 Mode="OneWay"
                                 Path="User.Level"
                                 Source="{StaticResource Mediator}" />
                    </MultiBinding>
                </GroupBox.IsEnabled>
                <Grid IsEnabled="{Binding IsChecked, ElementName=CheckInTB, Mode=OneWay, Converter={StaticResource BoolNot}}"
                      TextElement.FontSize="20"
                      TextElement.FontWeight="Bold">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,1,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 操作員}" />
                    </Border>
                    <DockPanel Grid.Row="0"
                               Grid.Column="1"
                               LastChildFill="True">
                        <Button Width="30"
                                DockPanel.Dock="Right">
                            <Path HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Mode=OneWay}"
                                  StrokeLineJoin="Round"
                                  StrokeThickness="2">
                                <Path.Data>
                                    <GeometryGroup>
                                        <LineGeometry StartPoint="0,0"
                                                      EndPoint="10,10" />
                                        <LineGeometry StartPoint="10,0"
                                                      EndPoint="0,10" />
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding ClearOPTextCommand, Mode=OneTime}"
                                                           CommandParameter="{Binding ElementName=OPTextBox, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <TextBox x:Name="OPTextBox"
                                 BorderThickness="1,1,1,1"
                                 GotKeyboardFocus="TextBox_GotKeyboardFocus"
                                 KeyDown="OPTextBox_KeyDown"
                                 Text="{Binding InputOperatorID, Mode=TwoWay}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="GotKeyboardFocus">
                                    <i:InvokeCommandAction Command="{Binding InputFocusCommand, Mode=OneTime}"
                                                           CommandParameter="{Binding ElementName=OPTextBox, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </DockPanel>
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 料號}" />
                    </Border>
                    <DockPanel Grid.Row="1"
                               Grid.Column="1"
                               LastChildFill="True">
                        <Button Width="30"
                                DockPanel.Dock="Right">
                            <Path HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Mode=OneWay}"
                                  StrokeLineJoin="Round"
                                  StrokeThickness="2">
                                <Path.Data>
                                    <GeometryGroup>
                                        <LineGeometry StartPoint="0,0"
                                                      EndPoint="10,10" />
                                        <LineGeometry StartPoint="10,0"
                                                      EndPoint="0,10" />
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding ClearPartTextCommand, Mode=OneTime}"
                                                           CommandParameter="{Binding ElementName=PartTextBox, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <TextBox x:Name="PartTextBox"
                                 views:TextBoxExtensions.HideScreenKeyboard="True"
                                 BorderThickness="1,0,1,1"
                                 GotKeyboardFocus="TextBox_GotKeyboardFocus"
                                 KeyDown="PartTextBox_KeyDown"
                                 Text="{Binding InputPartID, Mode=TwoWay}">
                        </TextBox>
                    </DockPanel>
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="{DynamicResource ErrorBrush}"
                            Visibility="{Binding IsKeyboardFocused, ElementName=PartTextBox, Mode=OneWay, Converter={StaticResource BoolVis}}">
                        <TextBlock Margin="2"
                                   FontSize="11"
                                   Foreground="{DynamicResource GlyphBrush}"
                                   Text="{StaticResource 僅限讀碼器}" />
                    </Border>
                    <Border Grid.Row="2"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 批號}" />
                    </Border>
                    <DockPanel Grid.Row="2"
                               Grid.Column="1"
                               LastChildFill="True">
                        <Button Width="30"
                                DockPanel.Dock="Right">
                            <Path HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Mode=OneWay}"
                                  StrokeLineJoin="Round"
                                  StrokeThickness="2">
                                <Path.Data>
                                    <GeometryGroup>
                                        <LineGeometry StartPoint="0,0"
                                                      EndPoint="10,10" />
                                        <LineGeometry StartPoint="10,0"
                                                      EndPoint="0,10" />
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding ClearLotTextCommand, Mode=OneTime}"
                                                           CommandParameter="{Binding ElementName=LotTextBox, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <TextBox x:Name="LotTextBox"
                                 views:TextBoxExtensions.HideScreenKeyboard="True"
                                 BorderThickness="1,0,1,1"
                                 GotKeyboardFocus="TextBox_GotKeyboardFocus"
                                 KeyDown="LotTextBox_KeyDown"
                                 Text="{Binding InputLotID, Mode=TwoWay}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="GotKeyboardFocus">
                                    <i:InvokeCommandAction Command="{Binding InputFocusCommand, Mode=OneTime}"
                                                           CommandParameter="{Binding ElementName=LotTextBox, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </DockPanel>
                    <Border Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="{DynamicResource ErrorBrush}"
                            Visibility="{Binding IsKeyboardFocused, ElementName=LotTextBox, Mode=OneWay, Converter={StaticResource BoolVis}}">
                        <TextBlock Margin="2"
                                   FontSize="11"
                                   Foreground="{DynamicResource GlyphBrush}"
                                   Text="{StaticResource 僅限讀碼器}" />
                    </Border>
                    <Border Grid.Row="3"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 配方}" />
                    </Border>
                    <DockPanel Grid.Row="3"
                               Grid.Column="1"
                               IsEnabled="{Binding SecsIsRemoteOnline, Mode=OneWay, Converter={StaticResource BoolNot}}"
                               LastChildFill="True">
                        <Button Width="30"
                                DockPanel.Dock="Right">
                            <Path HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Mode=OneWay}"
                                  StrokeLineJoin="Round"
                                  StrokeThickness="2">
                                <Path.Data>
                                    <GeometryGroup>
                                        <LineGeometry StartPoint="0,0"
                                                      EndPoint="10,10" />
                                        <LineGeometry StartPoint="10,0"
                                                      EndPoint="0,10" />
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding ClearRecipeTextCommand, Mode=OneTime}"
                                                           CommandParameter="{Binding ElementName=RecipeTextBox, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <TextBox x:Name="RecipeTextBox"
                                 views:TextBoxExtensions.HideScreenKeyboard="True"
                                 BorderThickness="1,0,1,1"
                                 GotKeyboardFocus="TextBox_GotKeyboardFocus"
                                 KeyDown="RecipeTextBox_KeyDown"
                                 Text="{Binding InputRecipeName, Mode=TwoWay}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="LostKeyboardFocus">
                                    <i:InvokeCommandAction Command="{Binding CheckRecipeCommand_KeyIn, Mode=OneTime}"
                                                           CommandParameter="{Binding Text, ElementName=RecipeTextBox, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </DockPanel>
                    <Border Grid.Row="3"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="{DynamicResource ErrorBrush}"
                            Visibility="{Binding IsKeyboardFocused, ElementName=RecipeTextBox, Mode=OneWay, Converter={StaticResource BoolVis}}">
                        <TextBlock Margin="2"
                                   FontSize="11"
                                   Foreground="{DynamicResource GlyphBrush}"
                                   Text="{StaticResource 僅限讀碼器}" />
                    </Border>
                    <Border Grid.Row="4"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 數量}" />
                    </Border>
                    <DockPanel Grid.Row="4"
                               Grid.Column="1"
                               LastChildFill="True">
                        <Button Width="30"
                                DockPanel.Dock="Right">
                            <Path HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Mode=OneWay}"
                                  StrokeLineJoin="Round"
                                  StrokeThickness="2">
                                <Path.Data>
                                    <GeometryGroup>
                                        <LineGeometry StartPoint="0,0"
                                                      EndPoint="10,10" />
                                        <LineGeometry StartPoint="10,0"
                                                      EndPoint="0,10" />
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding ClearQuantityCommand, Mode=OneTime}"
                                                           CommandParameter="{Binding ElementName=NumericTextBox, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Border BorderThickness="1,0,1,1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{StaticResource LightBrush}" />
                                    <Setter Property="BorderBrush" Value="{StaticResource WindowBackgroundBrush4}" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="{DynamicResource DisabledBackgroundBrush}" />
                                            <Setter Property="BorderBrush" Value="{DynamicResource DisabledBorderBrush}" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=NumericTextBox, Mode=OneWay}"
                                                     Value="True">
                                            <Setter Property="Background" Value="{DynamicResource LightColorBrush}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <views:SpinControl Margin="8,0"
                                               VerticalAlignment="Center"
                                               Maximum="{Binding InputQuantityMax, Mode=OneTime}"
                                               Minimum="{Binding InputQuantityMin, Mode=OneTime}"
                                               Value="{Binding InputQuantity, Mode=TwoWay}">
                                <views:SpinControl.SmallChange>
                                    <system:Double>1</system:Double>
                                </views:SpinControl.SmallChange>
                                <views:NumericTextBox x:Name="NumericTextBox"
                                                      Background="Transparent"
                                                      BorderThickness="0"
                                                      IntOnly="True"
                                                      Max="{Binding InputQuantityMax, Mode=OneTime}"
                                                      Min="{Binding InputQuantityMin, Mode=OneTime}"
                                                      Text="{Binding InputQuantity, Mode=TwoWay}" />
                            </views:SpinControl>
                        </Border>
                    </DockPanel>
                    <Border Grid.Row="5"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 階層}" />
                    </Border>
                    <Border Grid.Row="5"
                            Grid.Column="1"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,0">
                        <ListBox ItemContainerStyle="{StaticResource ListBoxItem_Top}"
                                 SelectedIndex="{Binding InputLayer, Mode=TwoWay, Converter={StaticResource AddValue}, ConverterParameter=-1}">
                            <ListBox.Template>
                                <ControlTemplate>
                                    <ItemsPresenter />
                                </ControlTemplate>
                            </ListBox.Template>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <views:UniformStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <system:String>1</system:String>
                            <system:String>2</system:String>
                            <system:String>3</system:String>
                            <system:String>4</system:String>
                            <system:String>5</system:String>
                            <system:String>6</system:String>
                            <system:String>7</system:String>
                            <system:String>8</system:String>
                        </ListBox>
                    </Border>
                    <Button Grid.Row="6"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="{DynamicResource 新增}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddLotCommand, Mode=OneTime}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="0"
                      Grid.Column="1"
                      Margin="2,0,0,2">
                <GroupBox.IsEnabled>
                    <MultiBinding Converter="{StaticResource MultiAllTrue}">
                        <Binding Mode="OneWay"
                                 Path="RemoteMode" />
                        <Binding Converter="{StaticResource IsMoreThanValue}"
                                 ConverterParameter="1"
                                 FallbackValue="False"
                                 Mode="OneWay"
                                 Path="User.Level"
                                 Source="{StaticResource Mediator}" />
                    </MultiBinding>
                </GroupBox.IsEnabled>
                <GroupBox.Header>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource GlyphBrush}">
                        <Run Text="{DynamicResource 總數量}" />
                        <Run Text=":" />
                        <Run Text="{Binding OvenInfo.TempQuantity, Mode=OneWay}" />
                    </TextBlock>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="DataGrid"
                              views:DataGridExtensions.DisplayRowNumber="True"
                              AutoGenerateColumns="False"
                              BorderThickness="1,1,1,1"
                              DockPanel.Dock="Top"
                              FontSize="14"
                              FontWeight="Bold"
                              HorizontalScrollBarVisibility="Disabled"
                              IsEnabled="{Binding IsChecked, ElementName=CheckInTB, Mode=OneWay, Converter={StaticResource BoolNot}}"
                              ItemsSource="{Binding OvenInfo.TempProducts, Mode=OneWay}"
                              Loaded="DataGrid_Loaded"
                              VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="Auto"
                                                    MinWidth="60"
                                                    CellStyle="{StaticResource DataGridCellStyle2}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <Button Content="{DynamicResource 刪除}"
                                                Style="{StaticResource TextButton2}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.DeleteLotCommand, ElementName=DataGrid, Mode=OneTime}"
                                                                           CommandParameter="{Binding SelectedItem, ElementName=DataGrid, Mode=OneWay}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource 階層}" />
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <Viewbox Margin="4"
                                                 StretchDirection="DownOnly">
                                            <TextBlock HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="16"
                                                       Text="{Binding Layer, Mode=OneWay}" />
                                        </Viewbox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource 料號}" />
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <TextBlock Margin="4"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding PartID, Mode=OneWay}"
                                                   TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource 批號}" />
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <TextBlock Margin="4"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding LotID, Mode=OneWay}"
                                                   TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Width="Auto"
                                                MinWidth="60"
                                                Binding="{Binding Quantity, Mode=OneWay}"
                                                Header="{DynamicResource 數量}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Row="1">
                        <ToggleButton x:Name="CheckInTB"
                                      Content="{DynamicResource 登記}"
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Tag="{x:Null}"
                                      Visibility="{Binding SecsIsOnline, Mode=OneWay, Converter={StaticResource BoolVis}}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:ChangePropertyAction PropertyName="Content"
                                                            Value="{DynamicResource 取消}" />
                                    <i:InvokeCommandAction Command="{Binding CheckInCommand, Mode=OneTime}" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="Unchecked">
                                    <i:ChangePropertyAction PropertyName="Content"
                                                            Value="{DynamicResource 登記}" />
                                    <i:InvokeCommandAction Command="{Binding CancelCheckInCommand, Mode=OneTime}"
                                                           CommandParameter="{Binding Tag, ElementName=CheckInTB, Mode=OneWay}" />
                                    <i:ChangePropertyAction PropertyName="Tag"
