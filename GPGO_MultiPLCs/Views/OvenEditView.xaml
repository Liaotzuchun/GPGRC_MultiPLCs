<UserControl x:Class="GPGO_MultiPLCs.Views.OvenEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gpmodels="clr-namespace:GPMVVM.Models;assembly=GPMVVM"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:GPGO_MultiPLCs.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:GPGO_MultiPLCs.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:views="clr-namespace:GPMVVM.Views;assembly=GPMVVM"
             xmlns:vm="clr-namespace:GPGO_MultiPLCs.ViewModels"
             d:DataContext="{d:DesignInstance vm:PLC_ViewModel}"
             d:DesignHeight="800"
             d:DesignWidth="900"
             IsEnabled="{Binding IsExecuting, Mode=OneWay, Converter={StaticResource BoolNot}}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:EqualBrush x:Key="EqualBrush" />
    </UserControl.Resources>

    <Grid TextElement.FontWeight="Bold">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <views:UniformStackPanel Orientation="Vertical">
                <Border Height="24"
                        Background="{StaticResource BlueA700Brush}">
                    <Border Background="#99000000"
                            Visibility="{Binding BlueLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
                <Border Height="24"
                        Background="{StaticResource OKBrush}">
                    <Border Background="#99000000"
                            Visibility="{Binding GreenLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
                <Border Height="24"
                        Background="Gold">
                    <Border Background="#99000000"
                            Visibility="{Binding YellowLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
                <Border Height="24"
                        Background="{StaticResource ErrorBrush}">
                    <Border Background="#99000000"
                            Visibility="{Binding RedLight, Mode=OneWay, Converter={StaticResource BoolNotVis}}" />
                </Border>
            </views:UniformStackPanel>
            <Border x:Name="StatusBorder"
                    Grid.Row="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Offset="0" Color="{Binding Color, Source={StaticResource WindowBackgroundBrush6}}" />
                        <GradientStop Offset="1" Color="{Binding Color, Source={StaticResource WindowBackgroundBrush2}}" />
                    </LinearGradientBrush>
                </Border.Background>
                <Viewbox Margin="6"
                         VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource BaseForeground}"
                               Text="{Binding PV_ThermostatTemperature, Mode=OneWay, StringFormat=\{0:F1\}°C}" />
                </Viewbox>
            </Border>
            <Border Grid.Row="1"
                    Background="{StaticResource WorkingBrush}"
                    Visibility="{Binding IsExecuting, Mode=OneWay, Converter={StaticResource BoolVis}}">
                <Viewbox Margin="6"
                         VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource ErrorBrush}"
                               Text="{Binding PV_ThermostatTemperature, Mode=OneWay, StringFormat=\{0:F1\}°C}" />
                </Viewbox>
            </Border>
            <Border Grid.Row="0"
                    Grid.RowSpan="2"
                    Background="{StaticResource DisabledBackgroundBrush}"
                    Visibility="{Binding ConnectionStatus.CurrentValue, Mode=OneWay, Converter={StaticResource BoolNotVis}}">
                <Viewbox Margin="6"
                         VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource DisabledForegroundBrush}"
                               Text="{DynamicResource 離線}" />
                </Viewbox>
            </Border>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="1.2*" />
            </Grid.RowDefinitions>
            <GroupBox Margin="0,0,2,2"
                      FontSize="16"
                      FontWeight="Bold"
                      Header="{DynamicResource 投產}"
                      IsEnabled="{Binding User.Level, Source={StaticResource Mediator}, Converter={StaticResource IsMoreThanValue}, ConverterParameter=1, Mode=OneWay}">
                <Grid TextElement.FontSize="20"
                      TextElement.FontWeight="Bold">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,1,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 操作員}" />
                    </Border>
                    <TextBox x:Name="OPTextBox"
                             Grid.Row="0"
                             Grid.Column="1"
                             BorderThickness="1,1,1,1"
                             GotKeyboardFocus="TextBox_GotKeyboardFocus"
                             KeyDown="OPTextBox_KeyDown"
                             Text="{Binding InputOperatorID, Mode=TwoWay}" />
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 料號}" />
                    </Border>
                    <TextBox x:Name="PartTextBox"
                             Grid.Row="1"
                             Grid.Column="1"
                             views:TextBoxExtensions.HideScreenKeyboard="True"
                             BorderThickness="1,0,1,1"
                             GotKeyboardFocus="TextBox_GotKeyboardFocus"
                             KeyDown="PartTextBox_KeyDown"
                             Text="{Binding InputPartID, Mode=TwoWay}" />
                    <Border Grid.Row="2"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 批號}" />
                    </Border>
                    <TextBox x:Name="LotTextBox"
                             Grid.Row="2"
                             Grid.Column="1"
                             views:TextBoxExtensions.HideScreenKeyboard="True"
                             BorderThickness="1,0,1,1"
                             GotKeyboardFocus="TextBox_GotKeyboardFocus"
                             KeyDown="LotTextBox_KeyDown"
                             Text="{Binding InputLotID, Mode=TwoWay}" />
                    <Border Grid.Row="3"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 配方}" />
                    </Border>
                    <TextBox x:Name="RecipeComboBox"
                             Grid.Row="3"
                             Grid.Column="1"
                             views:TextBoxExtensions.HideScreenKeyboard="True"
                             BorderThickness="1,0,1,1"
                             Text="{Binding Intput_Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="KeyUp">
                                <gpmodels:InteractiveCommand Command="{Binding CheckRecipeCommand_KeyIn, Mode=OneTime}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <Border Grid.Row="4"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 數量}" />
                    </Border>
                    <Border Grid.Row="4"
                            Grid.Column="1"
                            BorderThickness="1,0,1,1">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource LightBrush}" />
                                <Setter Property="BorderBrush" Value="{StaticResource WindowBackgroundBrush4}" />
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="{DynamicResource DisabledBackgroundBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource DisabledBorderBrush}" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=NumericTextBox, Mode=OneWay}"
                                                 Value="True">
                                        <Setter Property="Background" Value="{DynamicResource LightColorBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <views:SpinControl Margin="8,0"
                                           VerticalAlignment="Center"
                                           Maximum="{Binding InputQuantityMax, Mode=OneTime}"
                                           Minimum="{Binding InputQuantityMin, Mode=OneTime}"
                                           Value="{Binding InputQuantity, Mode=TwoWay}">
                            <views:SpinControl.SmallChange>
                                <system:Double>1</system:Double>
                            </views:SpinControl.SmallChange>
                            <views:NumericTextBox x:Name="NumericTextBox"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  IntOnly="True"
                                                  Max="{Binding InputQuantityMax, Mode=OneTime}"
                                                  Min="{Binding InputQuantityMin, Mode=OneTime}"
                                                  Text="{Binding InputQuantity, Mode=TwoWay}" />
                        </views:SpinControl>
                    </Border>
                    <Border Grid.Row="5"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,1">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 階層}" />
                    </Border>
                    <Border Grid.Row="5"
                            Grid.Column="1"
                            BorderBrush="{StaticResource WindowBackgroundBrush4}"
                            BorderThickness="1,0,0,0">
                        <ListBox ItemContainerStyle="{StaticResource ListBoxItem_Top}"
                                 SelectedIndex="{Binding InputLayer, Mode=TwoWay, Converter={StaticResource AddValue}, ConverterParameter=-1}">
                            <ListBox.Template>
                                <ControlTemplate>
                                    <ItemsPresenter />
                                </ControlTemplate>
                            </ListBox.Template>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <views:UniformStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <system:String>1</system:String>
                            <system:String>2</system:String>
                            <system:String>3</system:String>
                            <system:String>4</system:String>
                            <system:String>5</system:String>
                            <system:String>6</system:String>
                            <system:String>7</system:String>
                            <system:String>8</system:String>
                        </ListBox>
                    </Border>
                    <Button Grid.Row="6"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="{DynamicResource 新增}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddLotCommand, Mode=OneTime}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="0"
                      Grid.Column="1"
                      Margin="2,0,0,2"
                      IsEnabled="{Binding User.Level, Source={StaticResource Mediator}, Converter={StaticResource IsMoreThanValue}, ConverterParameter=1, Mode=OneWay}">
                <GroupBox.Header>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource GlyphBrush}">
                        <Run Text="{DynamicResource 總數量}" />
                        <Run Text=":" />
                        <Run Text="{Binding OvenInfo.Quantity, Mode=OneWay}" />
                    </TextBlock>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="DataGrid"
                              views:DataGridExtensions.DisplayRowNumber="True"
                              AutoGenerateColumns="False"
                              BorderThickness="1,1,1,1"
                              DockPanel.Dock="Top"
                              FontSize="14"
                              FontWeight="Bold"
                              HorizontalScrollBarVisibility="Disabled"
                              ItemsSource="{Binding OvenInfo.Products, Mode=OneWay}"
                              Loaded="DataGrid_Loaded"
                              VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="Auto"
                                                    MinWidth="60"
                                                    CellStyle="{StaticResource DataGridCellStyle2}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <Button Content="{DynamicResource 刪除}"
                                                Style="{StaticResource TextButton2}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.DeleteLotCommand, ElementName=DataGrid, Mode=OneTime}"
                                                                           CommandParameter="{Binding SelectedItem, ElementName=DataGrid, Mode=OneWay}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource 階層}" />
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <Viewbox Margin="4"
                                                 StretchDirection="DownOnly">
                                            <TextBlock HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding Layer, Mode=OneWay}" />
                                        </Viewbox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource 料號}" />
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <Viewbox Margin="4"
                                                 StretchDirection="DownOnly">
                                            <TextBlock HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding PartID, Mode=OneWay}"
                                                       TextTrimming="CharacterEllipsis" />
                                        </Viewbox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource 批號}" />
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <Viewbox Margin="4"
                                                 StretchDirection="DownOnly">
                                            <TextBlock HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding LotID, Mode=OneWay}"
                                                       TextTrimming="CharacterEllipsis" />
                                        </Viewbox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="Auto"
                                                    MinWidth="60">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource 數量}" />
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="models:ProductInfo">
                                        <Grid>
                                            <ToggleButton x:Name="ToggleButton"
                                                          Content="{Binding PanelIDs.Count, Mode=OneWay}"
                                                          Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridCell}}}"
                                                          Style="{StaticResource ArrowToggle}">
                                                <ToggleButton.IsChecked>
                                                    <Binding Converter="{StaticResource ConstValue}"
                                                             Mode="OneWay"
                                                             Path="IsSelected"
                                                             RelativeSource="{RelativeSource FindAncestor,
                                                                                             AncestorType={x:Type DataGridCell}}">
                                                        <Binding.ConverterParameter>
                                                            <system:Boolean>False</system:Boolean>
                                                        </Binding.ConverterParameter>
                                                    </Binding>
                                                </ToggleButton.IsChecked>
                                            </ToggleButton>
                                            <Popup AllowsTransparency="True"
                                                   Focusable="False"
                                                   IsHitTestVisible="False"
                                                   IsOpen="{Binding IsChecked, ElementName=ToggleButton, Mode=OneWay}"
                                                   Placement="Center"
                                                   PopupAnimation="Fade">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseLeave">
                                                        <views:SetPropertyAction PropertyName="IsChecked"
                                                                                 TargetObject="{Binding ElementName=ToggleButton, Mode=OneTime}">
                                                            <views:SetPropertyAction.PropertyValue>
                                                                <system:Boolean>False</system:Boolean>
                                                            </views:SetPropertyAction.PropertyValue>
                                                        </views:SetPropertyAction>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                                <ItemsControl x:Name="ItemsControl"
                                                              AlternationCount="2147483647"
                                                              ItemsSource="{Binding PanelIDs, Mode=OneWay}">
                                                    <ItemsControl.Template>
                                                        <ControlTemplate>
                                                            <Border Background="Transparent">
                                                                <Border Margin="15,10,15,15"
                                                                        Background="{StaticResource LightColorBrush}"
                                                                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                                                        BorderThickness="1,1,0,0">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect BlurRadius="15"
                                                                                          Direction="270"
                                                                                          Opacity="0.25" />
                                                                    </Border.Effect>
                                                                    <ItemsPresenter />
                                                                </Border>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </ItemsControl.Template>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <views:UniformGridWithOrientation Orientation="Vertical"
                                                                                              Rows="10" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid TextElement.Foreground="{StaticResource BaseForeground}">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="30" />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>
                                                                <Border Background="{StaticResource WindowBackgroundBrush6}"
                                                                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                                                        BorderThickness="0,0,1,1">
                                                                    <TextBlock Margin="4"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"
                                                                               FontSize="12"
                                                                               Text="{Binding (ItemsControl.AlternationIndex), ConverterParameter=1, Converter={StaticResource AddValue}, RelativeSource={RelativeSource TemplatedParent}, Mode=OneTime}" />
                                                                </Border>
                                                                <Border Grid.Column="1"
                                                                        Background="Transparent"
                                                                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                                                        BorderThickness="0,0,1,1">
                                                                    <Viewbox Margin="4"
                                                                             HorizontalAlignment="Center"
                                                                             VerticalAlignment="Center"
                                                                             StretchDirection="DownOnly">
                                                                        <TextBlock FontSize="12"
                                                                                   Text="{Binding Mode=OneWay}" />
                                                                    </Viewbox>
                                                                </Border>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <Popup.VerticalOffset>
                                                    <MultiBinding Converter="{StaticResource SumValues}">
                                                        <Binding Converter="{StaticResource RatioValue}"
                                                                 ConverterParameter="0.5"
                                                                 ElementName="ItemsControl"
                                                                 Path="ActualHeight" />
                                                        <Binding Converter="{StaticResource RatioValue}"
                                                                 ConverterParameter="0.5"
                                                                 ElementName="ToggleButton"
                                                                 Path="ActualHeight" />
                                                    </MultiBinding>
                                                </Popup.VerticalOffset>
                                            </Popup>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <views:UniformStackPanel Grid.Row="1"
                                             Orientation="Horizontal">
                        <Button Content="{DynamicResource 啟動}"
                                FontSize="20"
                                FontWeight="Bold">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StartCommand, Mode=OneTime}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </views:UniformStackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Margin="0,2,0,0"
                      FontSize="16"
                      FontWeight="Bold">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="{StaticResource GlyphBrush}"
                                   Text="{DynamicResource 配方參數}" />
                        <Border Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Background="{StaticResource WindowBackgroundBrush6}">
                            <TextBlock Margin="4,0"
                                       FontSize="12">
                                <TextBlock.Foreground>
                                    <MultiBinding Converter="{StaticResource EqualBrush}">
                                        <Binding Mode="OneWay"
                                                 Path="RecipeName" />
                                        <Binding Mode="OneWay"
                                                 Path="PV_RecipeName" />
                                    </MultiBinding>
                                </TextBlock.Foreground>
                                <Run Text="SV:" />
                                <Run Text="{Binding RecipeName, Mode=OneWay}" />
                            </TextBlock>
                        </Border>
                        <Border VerticalAlignment="Center"
                                Background="{StaticResource WindowBackgroundBrush6}"
                                BorderBrush="{StaticResource WindowBackgroundBrush4}"
                                BorderThickness="1,0,0,0">
                            <TextBlock Margin="4,0"
                                       FontSize="12"
                                       Foreground="{StaticResource BaseForeground}">
                                <Run Text="PV:" />
                                <Run Text="{Binding PV_RecipeName, Mode=OneWay}" />
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </GroupBox.Header>
                <Grid Background="{StaticResource WindowBackgroundBrush6}"
                      ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 氮氣模式}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="1"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding NitrogenMode, Mode=OneWay, Converter={StaticResource BoolOnOff}}"
                                                 Value2="{Binding PV_NitrogenMode, Mode=OneWay, Converter={StaticResource BoolOnOff}}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="2"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 充氣逾時}" />
                            <Run Text="(" /><Run Text="{DynamicResource 分}" /><Run Text=")" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="3"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding InflatingTime, Mode=OneWay, StringFormat=\{0:F0\}}"
                                                 Value2="{Binding PV_InflatingTime, Mode=OneWay, StringFormat=\{0:F0\}}" />
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="4"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 含氧量}" />
                            <Run Text="(%)" />
                        </TextBlock>
                    </Border>
                    <Border Grid.Row="0"
                            Grid.Column="5"
                            BorderThickness="0,1,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding OxygenContentSet, Mode=OneWay, StringFormat=\{0:F1\}}"
                                                 Value2="{Binding PV_OxygenContentSet, Mode=OneWay, StringFormat=\{0:F1\}}" />
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="1,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource 使用段數}" />
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <local:PairValuesControl Value1="{Binding SegmentCounts, Mode=OneWay}"
                                                 Value2="{Binding PV_SegmentCounts, Mode=OneWay}" />
                    </Border>
                    <Border Grid.Row="1"
                            Grid.Column="2"
                            Background="{StaticResource WindowBackgroundBrush2}"
                            BorderThickness="0,0,1,1"
                            Style="{StaticResource ValueBorder}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Run Text="{DynamicResource 降溫溫度}" />
                            <Run Text="(°C)" />
