                                        </Border>
                                        <Border Background="{StaticResource LightColorBrush}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding HeatingTime_2, Mode=OneWay, StringFormat=\{0:D\} 分}" />
                                        </Border>
                                        <Border Background="{StaticResource LightColorBrush}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding HeatingTime_3, Mode=OneWay, StringFormat=\{0:D\} 分}" />
                                        </Border>
                                        <Border Background="{StaticResource LightColorBrush}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding HeatingTime_4, Mode=OneWay, StringFormat=\{0:D\} 分}" />
                                        </Border>
                                        <Border Background="{StaticResource LightColorBrush}">
