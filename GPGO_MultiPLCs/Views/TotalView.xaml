                                    </Border>
                                    <UniformGrid
                                        Grid.Row="1"
                                        Columns="1">
                                        <Border
                                            x:Name="b1"
                                            Background="{StaticResource WindowBackgroundBrush2}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="目標溫度1" />
                                        </Border>
                                        <Border Background="{StaticResource WindowBackgroundBrush2}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="目標溫度2" />
                                        </Border>
                                        <Border Background="{StaticResource WindowBackgroundBrush2}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="目標溫度3" />
                                        </Border>
                                        <Border Background="{StaticResource WindowBackgroundBrush2}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="目標溫度4" />
                                        </Border>
                                        <Border Background="{StaticResource WindowBackgroundBrush2}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="目標溫度5" />
                                        </Border>
                                        <Border Background="{StaticResource WindowBackgroundBrush2}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="目標溫度6" />
                                        </Border>
                                        <Border Background="{StaticResource WindowBackgroundBrush2}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="目標溫度7" />
                                        </Border>
                                        <Border Background="{StaticResource WindowBackgroundBrush2}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="目標溫度8" />
                                        </Border>
                                    </UniformGrid>
                                    <UniformGrid
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Columns="1">
                                        <Border Background="{StaticResource LightColorBrush}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding TargetTemperature_1, Mode=OneWay, StringFormat=\{0:F1\} °C}" />
                                        </Border>
                                        <Border Background="{StaticResource LightColorBrush}">
                                            <TextBlock
