<Window
    x:Class="GPGO_MultiPLCs.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GPGO_MultiPLCs.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    Title="GPGO"
    Background="{StaticResource WindowBackgroundBrush}"
    DataContext="{Binding MainVM, Source={StaticResource Connector}, Mode=OneWay}"
    Icon="/GPGO_MultiPLCs;component/GP.ico"
    SnapsToDevicePixels="True"
    WindowStartupLocation="Manual"
    WindowState="Maximized"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="224" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="78" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource LightColorBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.ColumnSpan="2">
                    <Rectangle
                        Fill="{StaticResource DisabledBackgroundBrush}"
                        Stroke="{StaticResource DisabledBorderBrush}"
                        StrokeThickness="1" />
                    <Rectangle
                        Fill="{StaticResource OKBrush}"
                        Stroke="{StaticResource OKBorderBrush}"
                        StrokeThickness="1" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="PLC Gate" />
                </Grid>
                <Button
                    Grid.Row="1"
                    Content="人員ID" />
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Background="{StaticResource LightBrush}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
            </Grid>
            <UniformGrid
                Grid.Column="1"
                Rows="1">
                <Button FontSize="20">生產頁面</Button>
                <Button FontSize="20">配方管理</Button>
                <Button FontSize="20">生產履歷</Button>
            </UniformGrid>
        </Grid>
        <Border
            Grid.Column="1"
            Background="{StaticResource LightColorBrush}">
            <Image
                Margin="8"
                Source="/GPGO_MultiPLCs;component/GPS.png" />
        </Border>
        <local:TotalView
            Grid.Row="1"
            DataContext="{Binding TotalVM, Source={StaticResource Connector}, Mode=OneWay}" />
        <GroupBox
            Grid.Row="1"
            Grid.Column="1"
            Header="本日產量">
            <oxy:PlotView
                Background="{StaticResource LightColorBrush}"
                Model="{Binding HistogramView, Mode=OneWay}" />
        </GroupBox>
    </Grid>
</Window>