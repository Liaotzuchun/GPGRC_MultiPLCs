<Window x:Class="GPGO_MultiPLCs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GPGO_MultiPLCs.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="GPGO"
        AllowsTransparency="True"
        Background="{DynamicResource WindowBackgroundBrush2}"
        DataContext="{Binding MainVM, Source={StaticResource Connector}, Mode=OneWay}"
        Icon="/GPGO_MultiPLCs;component/GP.ico"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Background="{StaticResource LightColorBrush}">
            <Image Margin="8"
                   Source="/GPGO_MultiPLCs;component/GPS.png" />
        </Border>
        <local:TotalView Grid.Row="1"
                         DataContext="{Binding TotalVM, Source={StaticResource Connector}, Mode=OneWay}" />
    </Grid>
</Window>