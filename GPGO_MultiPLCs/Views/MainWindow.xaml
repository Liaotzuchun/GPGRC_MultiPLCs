<Window x:Class="GPGO_MultiPLCs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GPGO_MultiPLCs.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="GPGO"
        Background="{StaticResource WindowBackgroundBrush}"
        DataContext="{Binding MainVM, Source={StaticResource Connector}, Mode=OneWay}"
        Icon="/GPGO_MultiPLCs;component/GP.ico"
        SnapsToDevicePixels="True"
        WindowStartupLocation="Manual"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="224" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="78" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource LightColorBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.ColumnSpan="2">
                    <Rectangle Fill="{StaticResource DisabledBackgroundBrush}"
                               Stroke="{StaticResource DisabledBorderBrush}"
                               StrokeThickness="1" />
                    <Rectangle Fill="{StaticResource OKBrush}"
                               Stroke="{StaticResource OKBorderBrush}"
                               StrokeThickness="1"
                               Visibility="{Binding TotalVM.Gate_Status, Source={StaticResource Connector}, Mode=OneWay, Converter={StaticResource BoolVis}}" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               Text="PLC Gate" />
                </Grid>
                <Button Grid.Row="1"
                        Content="人員ID" />
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Background="{StaticResource LightBrush}">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
            </Grid>
            <UniformGrid Grid.Column="1"
                         Rows="1">
                <ToggleButton FontSize="20" IsChecked="{Binding ViewIndex, ConverterParameter=0, Converter={StaticResource IsEqualValue}, Mode=TwoWay}">生產頁面</ToggleButton>
                <ToggleButton FontSize="20" IsChecked="{Binding ViewIndex, ConverterParameter=1, Converter={StaticResource IsEqualValue}, Mode=TwoWay}">配方管理</ToggleButton>
                <ToggleButton FontSize="20" IsChecked="{Binding ViewIndex, ConverterParameter=2, Converter={StaticResource IsEqualValue}, Mode=TwoWay}">生產履歷</ToggleButton>
            </UniformGrid>
        </Grid>
        <Border Grid.Column="1"
                Background="{StaticResource LightColorBrush}">
            <Image Margin="8"
                   Source="/GPGO_MultiPLCs;component/GPS.png" />
        </Border>
        <TabControl Grid.Row="1"
                    SelectedIndex="{Binding ViewIndex, Mode=TwoWay}"
                    Style="{StaticResource NoHeaderTabControl}">
            <TabItem>
                <local:TotalView DataContext="{Binding TotalVM, Source={StaticResource Connector}, Mode=OneWay}" />
            </TabItem>
            <TabItem>
                <local:RecipeControl DataContext="{Binding RecipeVM, Source={StaticResource Connector}, Mode=OneWay}" />
            </TabItem>
            <TabItem>
                <local:TraceabilityView DataContext="{Binding TraceVM, Source={StaticResource Connector}, Mode=OneWay}" />
            </TabItem>
        </TabControl>
        <GroupBox Grid.Row="1"
                  Grid.Column="1"
                  Header="本日產量">
            <oxy:PlotView Background="{StaticResource LightColorBrush}"
                          Model="{Binding HistogramView, Mode=OneWay}" />
        </GroupBox>
    </Grid>
</Window>