<Window
    x:Class="GPGO_MultiPLCs.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GPGO_MultiPLCs.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GPGO"
    Width="1024"
    Height="768"
    Background="{StaticResource WindowBackgroundBrush}"
    DataContext="{Binding MainVM, Source={StaticResource Connector}, Mode=OneWay}"
    FontFamily="Microsoft JhengHei"
    Icon="/GPGO_MultiPLCs;component/GP.ico"
    Loaded="Window_Loaded"
    SnapsToDevicePixels="True"
    WindowStartupLocation="Manual"
    WindowState="Maximized"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="224" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="78" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            x:Name="PopGrid"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2">
            <local:GlobalDialog DataContext="{Binding DialogVM, Source={StaticResource Connector}, Mode=OneTime}" />
        </Grid>
        <Grid Background="{StaticResource LightColorBrush}">
            <UniformGrid Rows="1">
                <ToggleButton
                    Content="生產頁面"
                    FontSize="20"
                    IsChecked="{Binding ViewIndex, ConverterParameter=0, Converter={StaticResource IsEqualValue}, Mode=TwoWay}" />
                <ToggleButton
                    FontSize="20"
                    IsChecked="{Binding ViewIndex, ConverterParameter=1, Converter={StaticResource IsEqualValue}, Mode=TwoWay}">
                    配方管理
                </ToggleButton>
                <ToggleButton
                    FontSize="20"
                    IsChecked="{Binding ViewIndex, ConverterParameter=2, Converter={StaticResource IsEqualValue}, Mode=TwoWay}">
                    生產履歷
                </ToggleButton>
            </UniformGrid>
        </Grid>
        <Border
            Grid.Column="1"
            Background="{StaticResource LightColorBrush}">
            <Image
                Margin="8"
                Source="/GPGO_MultiPLCs;component/GPS.png" />
        </Border>
        <TabControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            SelectedIndex="{Binding ViewIndex, Mode=OneWay}">
            <TabItem
                Width="0"
                Height="0">
                <local:TotalView DataContext="{Binding TotalVM, Source={StaticResource Connector}, Mode=OneWay}" />
            </TabItem>
            <TabItem
                Width="0"
                Height="0">
                <local:RecipeControl
                    Margin="0,4,0,0"
                    DataContext="{Binding RecipeVM, Source={StaticResource Connector}, Mode=OneWay}" />
            </TabItem>
            <TabItem
                Width="0"
                Height="0">
                <local:TraceabilityView
                    Margin="0,4,0,0"
                    DataContext="{Binding TraceVM, Source={StaticResource Connector}, Mode=OneWay}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>