<UserControl
    x:Class="GPGO_MultiPLCs.Views.Authenticator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:GPGO_MultiPLCs.ViewModels"
    d:DataContext="{d:DesignInstance vm:Authenticator_ViewModel}"
    IsVisibleChanged="UserControl_IsVisibleChanged"
    Visibility="{Binding IsShown, Mode=OneWay}"
    mc:Ignorable="d">

    <Grid>
        <Border Background="#7F333333">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseDown">
                    <i:InvokeCommandAction
                        Command="{Binding ExitLog, Mode=OneTime}"
                        CommandParameter="{Binding ElementName=Password, Mode=OneWay}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Border>
        <Border
            Width="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource WindowBackgroundBrush2}"
            BorderBrush="{Binding BorderBrush, ElementName=Border, Mode=OneWay}"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border x:Name="Border">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseDown">
                            <i:InvokeCommandAction
                                Command="{Binding ExitLog, Mode=OneTime}"
                                CommandParameter="{Binding ElementName=Password, Mode=OneWay}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource OKBrush}" />
                            <Setter Property="BorderBrush" Value="{StaticResource OKBorderBrush}" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding Login.Result, Mode=OneWay}"
                                    Value="False">
                                    <Setter Property="Background" Value="{StaticResource ErrorBrush}" />
                                    <Setter Property="BorderBrush" Value="{StaticResource ErrorBorderBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Path
                        Margin="4,2,4,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Stroke="{StaticResource GlyphBrush}"
                        StrokeLineJoin="Round"
                        StrokeThickness="3"
                        Visibility="{Binding IsMouseOver, Converter={StaticResource BoolVis}, ElementName=Border, Mode=OneWay}">
                        <Path.Data>
                            <GeometryGroup>
                                <LineGeometry
                                    StartPoint="0,0"
                                    EndPoint="10,10" />
                                <LineGeometry
                                    StartPoint="10,0"
                                    EndPoint="0,10" />
                            </GeometryGroup>
                        </Path.Data>
                    </Path>
                </Border>
                <Rectangle
                    Grid.Row="1"
                    Grid.RowSpan="3">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Offset="0" Color="{Binding Color, Source={StaticResource WindowBackgroundBrush2}}" />
                            <GradientStop Offset="0.5" Color="{Binding Color, Source={StaticResource LightBrush}}" />
                            <GradientStop Offset="1" Color="{Binding Color, Source={StaticResource WindowBackgroundBrush2}}" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Image
                    Grid.Row="1"
                    Margin="10"
                    Source="/GPGO_MultiPLCs;component/GPS.png"
                    Stretch="None" />
                <Grid
                    Grid.Row="2"
                    Margin="8,0"
                    KeyboardNavigation.TabNavigation="Cycle"
                    TextElement.FontSize="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button
                        Grid.RowSpan="2"
                        Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                        Margin="0,0,8,0"
                        Content="登出"
                        IsEnabled="{Binding NowUser.Level, Converter={StaticResource IsMoreThanValue}, ConverterParameter=1, Mode=OneWay}"
                        Visibility="{Binding IsEnabled, Converter={StaticResource BoolVis}, Mode=OneWay, RelativeSource={RelativeSource Self}}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction
                                    Command="{Binding Logout, Mode=OneTime}"
                                    CommandParameter="{Binding ElementName=Password, Mode=OneWay}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Border
                        Grid.Column="1"
                        Background="{StaticResource WindowBackgroundBrush6}"
                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                        BorderThickness="1,1,0,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="帳號" />
                    </Border>
                    <TextBox
                        x:Name="NameBox"
                        Grid.Column="2"
                        BorderThickness="1,1,1,0"
                        PreviewKeyDown="NameBox_PreviewKeyDown"
                        Text="{Binding TypedName, Mode=TwoWay}" />
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Background="{StaticResource WindowBackgroundBrush6}"
                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                        BorderThickness="1,1,0,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="密碼" />
                    </Border>
                    <PasswordBox
                        x:Name="Password"
                        Grid.Row="1"
                        Grid.Column="2"
                        PreviewKeyDown="Password_PreviewKeyDown" />
                    <Button
                        x:Name="LoginButton"
                        Grid.RowSpan="2"
                        Grid.Column="3"
                        Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                        Click="LoginButton_Click"
                        Content="登入">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction
                                    Command="{Binding Login, Mode=OneTime}"
                                    CommandParameter="{Binding ElementName=Password, Mode=OneWay}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Border>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="LightSlateGray" />
                                <Setter Property="Grid.Column" Value="4" />
                                <Setter Property="Grid.RowSpan" Value="2" />
                                <Setter Property="Width" Value="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding NowUser.Level, Mode=OneWay}"
                                        Value="1">
                                        <Setter Property="Background" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding NowUser.Level, Mode=OneWay}"
                                        Value="2">
                                        <Setter Property="Background" Value="Blue" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding NowUser.Level, Mode=OneWay}"
                                        Value="3">
                                        <Setter Property="Background" Value="Purple" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding NowUser.Level, Mode=OneWay}"
                                        Value="4">
                                        <Setter Property="Background" Value="{StaticResource EnergyBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="40"
                            Foreground="White"
                            Text="{Binding NowUser.Level}" />
                    </Border>
                </Grid>
                <Grid
                    x:Name="Grid"
                    Grid.Row="4"
                    Height="90"
                    Margin="8,0"
                    IsEnabled="{Binding NowUser.Level, Converter={StaticResource IsMoreThanValue}, ConverterParameter=2, Mode=OneWay}"
                    KeyboardNavigation.TabNavigation="Cycle"
                    TextElement.FontSize="16"
                    Visibility="{Binding IsEnabled, Converter={StaticResource BoolVis}, Mode=OneWay, RelativeSource={RelativeSource Self}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border
                        Background="{StaticResource WindowBackgroundBrush6}"
                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                        BorderThickness="1,1,0,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="帳號" />
                    </Border>
                    <TextBox
                        Grid.Column="1"
                        BorderThickness="1,1,1,0"
                        Text="{Binding EditName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Border
                        Grid.Row="1"
                        Background="{StaticResource WindowBackgroundBrush6}"
                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                        BorderThickness="1,1,0,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="密碼" />
                    </Border>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        BorderThickness="1,1,1,0"
                        Text="{Binding EditPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Border
                        Grid.Row="2"
                        Background="{StaticResource WindowBackgroundBrush6}"
                        BorderBrush="{StaticResource WindowBackgroundBrush4}"
                        BorderThickness="1,1,0,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="層級" />
                    </Border>
                    <ComboBox
                        x:Name="ComboBox"
                        Grid.Row="2"
                        Grid.Column="1"
                        ItemsSource="{Binding EditLevels, Mode=OneWay}"
                        SelectedItem="{Binding EditLevel, Mode=TwoWay}" />
                    <Button
                        Grid.RowSpan="3"
                        Grid.Column="2"
                        Content="修改"
                        IsEnabled="{Binding Update_Enable, Mode=OneWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding UpdateUser, Mode=OneTime}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Button
                        Grid.RowSpan="3"
                        Grid.Column="3"
                        Content="新增"
                        IsEnabled="{Binding Add_Enable, Mode=OneWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddUser, Mode=OneTime}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Button
                        Grid.RowSpan="3"
                        Grid.Column="4"
                        Content="刪除"
                        IsEnabled="{Binding Remove_Enable, Mode=OneWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding RemoveUser, Mode=OneTime}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <DataGrid
                    Grid.Row="5"
                    Height="200"
                    Margin="8"
                    AutoGenerateColumns="False"
                    BorderThickness="1"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    CanUserResizeRows="False"
                    CanUserSortColumns="False"
                    Focusable="False"
                    FontSize="11"
                    IsReadOnly="True"
                    IsSynchronizedWithCurrentItem="False"
                    ItemsSource="{Binding ViewUsers, Mode=OneWay}"
                    SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                    SelectionMode="Single"
                    Style="{StaticResource DataGridStyle}"
                    VerticalScrollBarVisibility="Visible"
                    Visibility="{Binding Visibility, ElementName=Grid, Mode=OneWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Name, Mode=OneWay}"
                            Header="帳號" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Password, Mode=OneWay}"
                            Header="密碼" />
                        <DataGridTextColumn
                            Binding="{Binding Level, Mode=OneWay}"
                            Header="層級" />
                        <DataGridTextColumn
                            Binding="{Binding LastLoginTime, Mode=OneWay, Converter={StaticResource DateTimeZeroToEmpty}, StringFormat={}{0:yyyy/MM/dd HH:mm:ss}}"
                            Header="上次登入" />
                        <DataGridTextColumn
                            Binding="{Binding CreatedTime, Mode=OneWay, Converter={StaticResource DateTimeZeroToEmpty}, StringFormat={}{0:yyyy/MM/dd HH:mm:ss}}"
                            Header="創建時間" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
